
{{# each products}}
    <div class = "row">
{{# each this}}
        <div class = "col-sm-6 col-md-3">
            <div class = "thumbnail">
                <img src = "{{ this.imagePath}}" class="img-responsive">
            </div>

            <div class = "caption">
                <h3>{{this.title}}</h3>
                <p class="description">{{this.description}}</p>

                <div>
                    <div class="price">${{this.price}}</div>
                    <div><a href = "/add-to-cart/{{this._id}}" class = "btn btn-success float-right" role = "button">Add to cart</a></div>

                </div>
            </div>
        </div>
{{/each}}
    </div>
{{/ each}}